
type Train {
  position: String!
  path: [String!]
  priority: Int
}

enum EdgeState {
  UNKNOWN
  OPEN 
  CLOSE
}

enum PointState {
  UNKNOWN
  ON
  OFF
}

type Edge {
  from: String!
  to: String!
  state: EdgeState
}

type Point {
  id: String!
  state: PointState!
}

type Query {
  points: [Point]
  edges: [Edge]
  trains: [Train]
}

type Mutation {
  # フロントエンドからポイントの状態を変更のみを許可する
  setPointState(id: String!, state: PointState!): Point
}